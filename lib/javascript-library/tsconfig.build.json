{
	"extends": "@sofie-automation/code-standard-preset/ts/tsconfig.lib",
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules/**",
		"src/**/*spec.ts",
		"src/**/__tests__/*",
		"src/**/__mocks__/*",
		"scratch/**",
		"examples"
	],
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": [
				"./node_modules/*"
			],
		},
		"types": [
			"node"
		],
		"skipLibCheck": true
	}
}
